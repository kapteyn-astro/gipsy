extern void *RemoveHead(listid this)
{
   listhead *self=(listhead *)this;
   listelem elem;
   void     *result;
    
   elem  = *self;
   if (elem) {
      result = elem->value;
      *self = elem->next;
      Delete(elem);
   } else result = NULL;
   return result;
}

